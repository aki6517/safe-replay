# SafeReply 環境変数設定例
# このファイルをコピーして .env を作成し、実際の値を設定してください

# ========================================
# Supabase
# ========================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# ========================================
# Upstash Redis
# ========================================
UPSTASH_REDIS_URL=https://your-redis.upstash.io
UPSTASH_REDIS_TOKEN=your_upstash_redis_token_here

# ========================================
# LINE Messaging API
# ========================================
LINE_CHANNEL_ACCESS_TOKEN=your_line_channel_access_token_here
LINE_CHANNEL_SECRET=your_line_channel_secret_here
LINE_ALLOWED_USER_IDS=your_line_user_id_here  # カンマ区切りで複数指定可能

# ========================================
# Gmail API
# ========================================
GMAIL_CLIENT_ID=your_gmail_client_id_here
GMAIL_CLIENT_SECRET=your_gmail_client_secret_here
GMAIL_REFRESH_TOKEN=your_gmail_refresh_token_here

# ========================================
# Chatwork API
# ========================================
CHATWORK_API_TOKEN=your_chatwork_api_token_here

# ========================================
# OpenAI API
# ========================================
OPENAI_API_KEY=your_openai_api_key_here
AI_PROVIDER=openai  # openai | anthropic | gemini (将来対応)

# ========================================
# アプリケーション設定
# ========================================
API_BASE_URL=https://your-app.railway.app
NODE_ENV=development  # development | production
PORT=3000

# ========================================
# 内部API認証（GitHub Actions用）
# ========================================
SERVICE_KEY=your_service_key_here

# ========================================
# その他
# ========================================
MAX_FILE_SIZE_MB=10  # ファイルサイズ制限（MB）
